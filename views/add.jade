extends layout

block content
    h1 Create New Chat Room

    form(method='post')
        fieldset.form-group
            label(for='name') Name:
            input.form-control(name='name', type='text', placeholder='Enter a name')
            small.text-muted Give your chatroom a name for people to refer to it.
        button.btn.btn-primary(type='submit') Create New Chatroom
        a.btn.btn-default(href='/admin/rooms') Cancel
