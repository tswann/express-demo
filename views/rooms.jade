extends layout

block content
    h1 Chat rooms
    a.btn.btn-primary(href='/admin/rooms/add') Create a new Chatroom
    table.table.table-striped
        thead
            tr
                th
                th Name
                th
        tbody
            each room in rooms
                tr
                    td: a(href='/admin/rooms/delete/#{room.id}')
                        span.glyphicon.glyphicon-remove
                    td= room.name
                    td: a(href='/admin/rooms/edit/#{room.id}')
                        span.glyphicon.glyphicon-pencil
